<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소셜/일반기부"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사업명"
        android:textSize="23dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/text_type"/>

    <TextView
        android:id="@+id/text_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기부할 마일리지를 입력해주세요."
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/text_name" />

    <EditText
        android:id="@+id/edit_mileage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_explain"/>

    <TextView
        android:id="@+id/hold_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보유마일리지 : "
        android:textSize="17dp"
        android:layout_below="@+id/edit_mileage"
        android:layout_toLeftOf="@+id/hold_mileage_value"/>
    <TextView
        android:id="@+id/hold_mileage_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09999"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edit_mileage"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btn_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기부하기"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/design_main_button_angul"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hold_mileage_value"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>