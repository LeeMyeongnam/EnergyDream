<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.energydream.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        android:background="#eeeeee">

        <TextView
            android:id="@+id/signup_company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사업자 회원가입"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/join_company_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사업자번호"
            android:background="@drawable/design_white_box"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/signup_company_title"/>
        <EditText
            android:id="@+id/join_company_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:background="@drawable/design_white_box"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/join_company_id"/>

        <EditText
            android:id="@+id/join_company_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:background="@drawable/design_white_box"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/join_company_pw" />

        <EditText
            android:id="@+id/join_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="기업명"
            android:background="@drawable/design_white_box"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/join_company_pw_check" />

        <Button
            android:id="@+id/btn_join_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="signup"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/design_main_button"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/join_company_name" />
    </RelativeLayout>

</FrameLayout>
